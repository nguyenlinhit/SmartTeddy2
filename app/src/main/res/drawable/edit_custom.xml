<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFF" />
            <stroke
                android:width="1dp"
                android:color="#7F7FFF" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFF" />
            <stroke
                android:width="1dp"
                android:color="#CCC" />
        </shape>
    </item>
</selector>