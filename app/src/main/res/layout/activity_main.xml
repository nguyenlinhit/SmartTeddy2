<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="iot.tdmu.edu.vn.smartteddy.app.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:weightSum="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.04"
            android:src="@drawable/android_icon"
            android:paddingLeft="100dp"/>

        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent" />

        <Switch
            android:id="@+id/mySwitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:textOn="APP"
            android:thumb="@drawable/customswitchselector"
            android:track="@drawable/custom_track"
            android:textOff="TEDDY"
            android:layout_centerHorizontal="true"
            android:paddingTop="2dp"/>

        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.04"
            android:src="@drawable/teddy39" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNhacVN"
            android:layout_width="190dp"
            android:layout_height="230dp"
            android:text="@string/nhacvn"/>

        <Button
            android:id="@+id/btnNhacNN"
            android:layout_width="194dp"
            android:layout_height="230dp"
            android:text="@string/nhacnn" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnKeTruyen"
            android:layout_width="190dp"
            android:layout_height="256dp"
            android:text="@string/ketruyen"/>

        <Button
            android:id="@+id/btnCauThoai"
            android:layout_width="194dp"
            android:layout_height="256dp"
            android:text="@string/cauthoai"/>
    </LinearLayout>
</LinearLayout>
